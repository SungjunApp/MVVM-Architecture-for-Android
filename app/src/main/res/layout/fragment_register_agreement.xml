<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/layout_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/layout_sub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkBox_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="17sp"
                android:text="@string/register4_checkAll" />

            <RelativeLayout
                android:id="@+id/v_clause1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" android:paddingLeft="10dp">

                <com.sjsoft.app.widget.IconImageView
                    android:src="@android:drawable/btn_plus"
                    android:id="@+id/checkBox_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:imageColor="@color/colorText"/>

                <TextView
                    android:id="@+id/tv_clause1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/checkBox_01"
                    android:includeFontPadding="false"
                    android:text="@string/register4_check1"
                    android:textColor="@color/colorText"
                    android:textSize="15sp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/checkBox_01"/>

                <TextView
                    android:id="@+id/tv_condition1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/tv_clause1"
                    android:includeFontPadding="false"
                    android:text="(required)"
                    android:textColor="@color/colorText"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_clause1"/>

                <com.sjsoft.app.widget.IconImageView
                    android:src="@android:drawable/btn_plus"
                    android:id="@+id/ib_clause1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:padding="5dp"
                    app:imageColor="@color/colorText"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="15dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/v_clause2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" android:paddingLeft="10dp">

                <com.sjsoft.app.widget.IconImageView
                    android:src="@android:drawable/btn_plus"
                    android:id="@+id/checkBox_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:imageColor="@color/colorText"/>

                <TextView
                    android:id="@+id/tv_clause2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/checkBox_02"
                    android:includeFontPadding="false"
                    android:text="check2"
                    android:textColor="@color/colorText"
                    android:textSize="15sp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/checkBox_02"/>

                <TextView
                    android:id="@+id/tv_condition2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/tv_clause2"
                    android:includeFontPadding="false"
                    android:text="(required)"
                    android:textColor="@color/colorText"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_clause2"/>

                <com.sjsoft.app.widget.IconImageView
                    android:src="@android:drawable/btn_plus"
                    android:id="@+id/ib_clause2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:padding="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="15dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/v_clause3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" android:paddingLeft="10dp">

                <com.sjsoft.app.widget.IconImageView
                    android:src="@android:drawable/btn_plus"
                    android:id="@+id/checkBox_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:imageColor="@color/colorText"/>

                <TextView
                    android:id="@+id/tv_clause3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/checkBox_03"
                    android:includeFontPadding="false"
                    android:text="check3"
                    android:textColor="@color/colorText"
                    android:textSize="15sp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/checkBox_03"/>

                <TextView
                    android:id="@+id/tv_condition3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/tv_clause3"
                    android:includeFontPadding="false"
                    android:text="(optional)"
                    android:textColor="@color/colorText"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_clause3"/>

                <com.sjsoft.app.widget.IconImageView
                    android:src="@android:drawable/btn_plus"
                    android:id="@+id/ib_clause3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:padding="5dp"
                    app:imageColor="@color/colorText" android:layout_alignParentRight="true"
                    android:layout_marginLeft="15dp"/>
            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bwtb_next"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/button_next"
                android:textColor="@android:color/white"
                app:rippleColor="@color/color_ripple" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>